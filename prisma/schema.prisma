generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum LOCALE {
  bn
  de
  en
  es
  fr
  hi
  id
  it
  ja
  ko
  lt
  ru
  vi
  zh
}

model FormSubmission {
  id              Int      @id @default(autoincrement())
  email           String?
  message         String
  locale          LOCALE
  createdAt       DateTime @default(now())
  userAgent       String
  referrerUrl     String
  ipSubmittedFrom String
}

model RateLimitEntry {
  id        Int      @id @default(autoincrement())
  key       String
  createdAt DateTime @default(now())

  @@index([key, createdAt])
}
